pipeline {  

    agent any
  
   stages {
    
    stage('Checkout') {
      steps {
        git 'https://github.com/nileshkardile/Demo-Infra.git'
      }
    }
   
    stage('Init') {
      steps{
       
       sh '''#!/bin/bash
				# This script is used to provision aws resources using terraform.
				export infra_home=/var/lib/jenkins/workspace/Infra_Demo-Infra-Pipeline_master
				cd $infra_home
				cd $home/src

				echo $home/src
	
						
               '''
        
      }
    }
     stage('Plan') {
      steps{
       		echo "Plan..."
                      
      }
    }
    
    stage('Apply') {
      steps{
       		echo "Applied..."
                      
      }
    }  
  }
}
